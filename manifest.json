{
    "name": "Whave",
    "permissions": ["activeTab", "declarativeContent"],
    "version": "1.0.1",
    "description": "Switch between light and dark mode on your Whatsapp webapp based on a select time or right from the browser toolbar.",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "page_action": {
        "default_title": "Whave for WhatsApp web theme",
        "default_popup": "home.html",
        "default_icon": {
            "16": "images/whave16.png",
            "32": "images/whave32.png",
            "48": "images/whave48.png",
            "128": "images/whave128.png"
          }
      },
      "icons": {
        "16": "images/whave16.png",
        "32": "images/whave32.png",
        "48": "images/whave48.png",
        "128": "images/whave128.png"
      },
    "manifest_version": 2,
    "content_scripts": [
      {
        "matches": ["https://web.whatsapp.com/*"],
        "run_at": "document_idle",
        "js": ["theme.js"]
      }
    ]
  }