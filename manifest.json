{
    "name": "WhatsApp Web Theme Timer",
    "permissions": ["activeTab", "declarativeContent"],
    "version": "1.0",
    "description": "A simple extension to change the theme of whatsapp web between dark and light mode accoridng to a set time of the day",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "page_action": {
        "default_title": "WhatsApp Web Time based theme swithcer",
        "default_popup": "home.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
          }
      },
      "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      },
    "manifest_version": 2,
    "content_scripts": [
      {
        "matches": ["https://web.whatsapp.com/*"],
        "run_at": "document_idle",
        "js": ["theme.js"]
      }
    ]
  }